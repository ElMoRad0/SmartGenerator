        <Button x:Name="QuitButton" Content="Quitter" HorizontalAlignment="Left" Margin="475,409,0,0" VerticalAlignment="Top" Width="150" Height="30" RenderTransformOrigin="0.51,0.533" FontSize="18" Click="QuitButton_Click"/>
    </Grid>
</Window>
